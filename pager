#!/bin/bash
# üìü deb-pager CLI Entrypoint

SCRIPTS_DIR="/usr/local/share/deb-pager/scripts"

show_menu() {
  echo "üßô‚Äç‚ôÇÔ∏è Welcome to deb-pager!"
  echo "Choose your action:"
  echo "-----------------------"
  echo "1Ô∏è‚É£  Update System"
  echo "2Ô∏è‚É£  Clean Cache"
  echo "3Ô∏è‚É£  Remove Orphans"
  echo "0Ô∏è‚É£  Exit"
  echo "-----------------------"
}

while true; do
  show_menu
  read -p "üëâ Enter your choice [0-3]: " choice

  case $choice in
    1)
      bash "$SCRIPTS_DIR/update.sh"
      ;;
    2)
      bash "$SCRIPTS_DIR/clean_cache.sh"
      ;;
    3)
      bash "$SCRIPTS_DIR/remove_orphans.sh"
      ;;
    0)
      echo "üëã Exiting deb-pager. See you next time!"
      break
      ;;
    *)
      echo "‚ùå Invalid choice. Please try again."
      ;;
  esac

  echo ""  # Add spacing between loops
done
